@model Portal.Web.Models.Department

@{
    ViewBag.Title = "CreateDepartment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .center_div {
        margin: 0 auto;
        /*     width: 20%; */ /* value of your choice which suits your alignment */
    }
</style>

<style type="text/css">
    body {
        font-family: Verdana, Arial, sans-serif;
        font-size: 12px;
    }

    #placeholder {
        width: 375px;
        height: 225px;
    }

    .legend table, .legend > div {
        height: 82px !important;
        opacity: 1 !important;
        left: 270px;
        top: 10px;
        width: 116px !important;
    }

    .legend table {
        padding: 5px;
    }
</style>
<script type="text/javascript">function RedirectToLocation(){
 window.location.href='/Admin/Departments';
}
    </script>

<div class="container center_div">
    <h3>Opprett ny avdeling</h3>

    <form class="form-horizontal" role="form" action="/Admin/CreateDepartment" method="POST">
        <div class="form-group">
            <label for="DepartmentName" class="col-sm-2 control-label">Avdelingsnavn</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="DepartmentName"
                       placeholder="" value="@Model.DepartmentName" name="DepartmentName">
                @Html.ValidationMessage("DepartmentName")
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Lagre</button>&nbsp;&nbsp;
                
                <button type="button" onclick="RedirectToLocation()"  class="btn btn-default">Avbryt</button>
                 
</div>
        </div>
    </form>
</div>
