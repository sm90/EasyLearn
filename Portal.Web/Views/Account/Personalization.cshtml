@using System.Activities.Statements
@using Portal.Web.Models
@model Portal.Web.Models.PersonalizationModel

@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_CourseLayout.cshtml";
}

<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
<link href="~/Content/kendo/2013.1.514/kendo.common.min.css" rel="stylesheet" />
<link href="~/Content/kendo/2013.1.514/kendo.bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/kendo/2013.1.514/jquery.min.js"></script>
<script src="~/Scripts/kendo/2013.1.514/kendo.web.min.js"></script>
<script src="/Scripts/kendo/2013.1.514/kendo.aspnetmvc.min.js"></script>
<script src="~/Scripts/kendo/2013.1.514/cultures/kendo.culture.nb-NO.min.js"></script>
<script src="/Scripts/kendo/2013.1.514/kendo.nb-NO.js"></script>
<script language="javascript" type="text/javascript" src="http://www.flotcharts.org/flot/jquery.flot.js"></script>
<script src="~/Scripts/flot/jquery.flot.tickrotor.js"></script>

<!--[if lte IE 8]>
    <script language="javascript" type="text/javascript" src="http://www.flotcharts.org/excanvas.min.js"></script>
<![endif]-->

<style type="text/css">
    body {
        font-family: Verdana, Arial, sans-serif;
        font-size: 12px;
    }

    /*#placeholder {
        width: 375px;
        height: 225px;
    }*/

    .legend table, .legend > div {
        height: 82px !important;
        opacity: 1 !important;
        left: 270px;
        top: 10px;
        width: 116px !important;
    }

    .legend table {
        padding: 5px;
    }
</style>
<br />


<div class="container">

    <div class="container">
        <style type="text/css">
            .bs-example {
                margin: 20px;
                margin-left: 240px;
            }
        </style>



        <div class="container">
            <style>
                .k-dropdown-wrap.k-state-focused,
                .k-dropdown-wrap.k-state-active {
                    background: black !important;
                }


                    .k-dropdown-wrap.k-state-focused .k-input,
                    .k-dropdown-wrap.k-state-active .k-input {
                        color: white !important;
                    }


                .k-list.k-reset li.k-state-selected,
                .k-list.k-reset li.k-state-hover {
                    background: #555555;
                }
            </style>

            <style type="text/css">
                .bs-example {
                    margin: 20px;
                }
            </style>


            <style>
                .center_div {
                    margin: 0 auto;
                    /*     width: 20%; */ /* value of your choice which suits your alignment */
                }
            </style>

            <br />
            @if (ViewBag.profileUpdate != null)
            {
                <div class="alert alert-success">
                    <a class="close" data-dismiss="alert">×</a>
                    Profil er nå oppdatert.
                </div>
            }
            <div class="container center_div">
                <h3>Personalization</h3>

                <form class="form-horizontal" role="form" action="/Account/Personalization" method="POST">

                    <div class="form-group">
                        <label class="col-sm-2 control-label">User name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="UserName"
                                   placeholder="" name="UserName" value="@Model.UserName">
                            @if (ViewBag.UserName == null)
                            {
                                @Html.ValidationMessage("UserName")
                            }

                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Firstname" class="col-sm-2 control-label">First Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="Firstname"
                                   placeholder="" name="Firstname" value="@Model.Firstname">
                            @if (ViewBag.Firstname == null)
                            {
                                @Html.ValidationMessage("Firstname")
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Lastname" class="col-sm-2 control-label">Last Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="Lastname"
                                   placeholder="" name="Lastname" value="@Model.Lastname">
                            @if (ViewBag.Lastname == null)
                            {
                                @Html.ValidationMessage("Lastname")
                            }
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="Email" class="col-sm-2 control-label">Email</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="Email"
                                   placeholder="" name="Email" value="@Model.Email">
                            @if (ViewBag.Email == null)
                            {
                                @Html.ValidationMessage("Email")
                            }
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Phone" class="col-sm-2 control-label">Phone</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="Phone"
                                   placeholder="" name="Phone" value="@Model.Phone">
                            @if (ViewBag.Phone == null)
                            {
                                @Html.ValidationMessage("Phone")
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Password0" class="col-sm-2 control-label">Password</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="Password"
                                   placeholder="" name="Password" value="">
                            @if (ViewBag.Password == null)
                            {
                                @Html.ValidationMessage("Password")
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Password0" class="col-sm-2 control-label">Re password</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="RePassword"
                                   placeholder="" name="RePassword" value="">
                            @if (ViewBag.RePassword == null)
                            {
                                @Html.ValidationMessage("RePassword")
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <input type="submit" class="btn btn-default" value="Lagre"/>
                        </div>
                    </div>
                    <input type="hidden" name="Id" value="@Model.Id" >
                </form>
            </div>

        </div>
        <style type="text/css">
            .k-grid, .k-grid-pager, .k-grid * {
                border: 0 !important;
            }

            .k-grid-header .k-header {
                background: #555555 !important;
                color: white !important;
            }

            .k-header {
                border-radius: 10px;
                overflow: hidden;
            }


            progress {
                width: 400px;
                height: 14px;
                /*   margin: 50px auto; */
                /*display: block;*/
                /* Important Thing */
                -webkit-appearance: none;
                border: none;
                background-color: #f2f2f2;
                color: #85c714;
                /*border-radius: 5px 10px 5px 10px;*/
                display: inline;
            }
        </style>
    </div>

    <div id="myModal" class="modal fade">
        <div class="modal-dialog" style="width:1100px; height:400px;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Statistikk</h4>
                </div>
                <div class="modal-body">
                    <div id="placeholder" style="width: 1050px; height: 380px;"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Lukk</button>

                </div>
            </div>
        </div>
    </div>
</div>